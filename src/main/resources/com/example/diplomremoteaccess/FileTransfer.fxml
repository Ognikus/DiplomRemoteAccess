<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.diplomremoteaccess.controlller.FileTransferController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10px;">
            <Label text="Локальный компьютер" />
            <TextField fx:id="localPathField" promptText="C:\\Users\\nikbo" prefWidth="200"/>
            <Button text="Обновить" onAction="#handleRefreshLocal"/>
            <Label text="Удаленный компьютер" />
            <TextField fx:id="remotePathField" promptText="C:\\Users\\vadim" prefWidth="200"/>
            <Button text="Обновить" onAction="#handleRefreshRemote"/>
        </HBox>
    </top>
    <center>
        <HBox spacing="20" style="-fx-padding: 10px;">
            <VBox>
                <Label text="Локальные файлы"/>
                <ListView fx:id="localFileList" prefHeight="400" prefWidth="300"/>
                <Button text="Отправить" onAction="#handleSend"/>
            </VBox>
            <VBox>
                <Label text="Удаленные файлы"/>
                <ListView fx:id="remoteFileList" prefHeight="400" prefWidth="300"/>
                <Button text="Получить" onAction="#handleReceive"/>
            </VBox>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10px;">
            <Button text="Закрыть" onAction="#handleClose"/>
        </HBox>
    </bottom>
</BorderPane>
