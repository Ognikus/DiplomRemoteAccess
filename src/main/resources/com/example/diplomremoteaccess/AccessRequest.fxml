<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="382.0" prefWidth="390.0" style="-fx-background-color: black;" stylesheets="@../../../css/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.diplomremoteaccess.AccessRequestController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="90.0" prefWidth="390.0" spacing="10" style="-fx-padding: 10px;" stylesheets="@../../../css/style.css">
            <ImageView fx:id="profileImage" fitHeight="69.0" fitWidth="76.0">
            <image>
               <Image url="@../../../css/windows.png" />
            </image></ImageView>
            <VBox prefHeight="70.0" prefWidth="294.0" stylesheets="@../../../css/style.css">
                <Label fx:id="usernameLabel" text="nikbo" textFill="WHITE" />
                <Label fx:id="requestMessage" text="Запрос доступа к вашему устройству..." textFill="WHITE" />
            </VBox>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="233.0" prefWidth="371.0" spacing="10" style="-fx-padding: 10px; -fx-background-color: gray;" stylesheets="@../../../css/style.css">
            <Label text="Разрешения" textFill="WHITE" />
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="keyboardPermission" text="Клавиатура" />
                <Button fx:id="clipboardPermission" text="Буфер обмена" />
                <Button fx:id="soundPermission" text="Звук" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="mousePermission" text="Мышь" />
                <Button fx:id="screenPermission" text="Экран" />
                <Button fx:id="filesPermission" text="Файлы" />
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="108.0" prefWidth="390.0" spacing="10" style="-fx-padding: 10px;">
            <Button onAction="#handleAccept" text="Принять" />
            <Button onAction="#handleAcceptAndElevate" text="Принять и повысить" />
            <Button onAction="#handleCancel" text="Отмена" />
        </HBox>
    </bottom>
</BorderPane>
